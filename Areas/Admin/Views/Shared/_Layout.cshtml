<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Admin Panel</title>
    <meta name="description" content="@ViewData["Description"]">
    
    <!-- Favicon -->

    <link rel="icon" type="image/png" sizes="32x32" href="~/images/logomini.png">


    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <!-- Sortable.js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js">
    <!-- Custom Styles -->

    <link rel="stylesheet" href="~/css/Admin/admin.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Admin/baocao.css" asp-append-version="true">
    


    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block sidebar">
               <div class="logo-section">
                     <a asp-area="Admin" asp-controller="Baocao" asp-action="Index" class="logo-circle">
                        <img src="~/images/logo.png" 
                            alt="Hệ thống quản lý khách hàng" 
                            class="img-fluid">
                    </a>
                </div>
                <nav class="mt-4">
                    <ul class="nav flex-column">
                      
                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Donhang" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Donhang" asp-action="Index" 
                               aria-label="Đơn hàng">
                                <i class="fas fa-shopping-cart"></i> 
                                <span>Đơn hàng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Sanpham" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Sanpham" asp-action="Index" 
                               aria-label="Sản phẩm">
                                <i class="fas fa-box"></i> 
                                <span>Sản phẩm</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Danhmuc" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Danhmuc" asp-action="Index" 
                               aria-label="Danh mục">
                                <i class="fas fa-tags"></i> 
                                <span>Danh mục</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <!-- Logout Section -->
                <div class="logout-section mt-10 p-9">
                    <form asp-controller="DangNhap" asp-action="DangXuat" asp-area="" method="post" id="logoutForm">
                        @Html.AntiForgeryToken()
                        <button type="button" class="btn btn-outline-danger w-100 logout-btn" 
                                onclick="confirmLogout()"
                                aria-label="Đăng xuất">
                            <i class="fas fa-sign-out-alt me-2"></i> 
                            <span>Đăng xuất</span>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="header d-flex justify-content-between align-items-center flex-wrap">
                    <div class="d-flex align-items-center">
                        <button class="btn btn-outline-primary d-md-none me-3" type="button" id="sidebarToggle" aria-label="Toggle sidebar">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="welcome-text rainbow-text">@ViewData["PageTitle"]</div>
                    </div>
                    
                </div>

                <!-- Tab Navigation (if needed) -->
                @if (ViewData["ShowTabs"] != null && (bool)ViewData["ShowTabs"])
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <ul class="nav nav-tabs border-0" id="mainTabs" role="tablist">
                            @await RenderSectionAsync("TabNavigation", required: false)
                        </ul>
                    </div>
                }

                <!-- Main Content Area -->
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Common Modals -->
    @await RenderSectionAsync("Modals", required: false)

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
    
    <!-- Common JavaScript -->
    <script>
        $(document).ready(function() {
            // Mobile sidebar toggle
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('show');
            });

            // Enhanced search functionality
            $('.header .form-control').on('input', function() {
                var searchTerm = $(this).val();
                if ($.fn.DataTable.isDataTable('table')) {
                    $('table').DataTable().search(searchTerm).draw();
                }
            });

            // Common notification function
            window.showNotification = function(type, message) {
                var alertClass = {
                    'success': 'alert-success',
                    'error': 'alert-danger',
                    'warning': 'alert-warning',
                    'info': 'alert-info'
                };

                var notification = $(`
                    <div class="alert ${alertClass[type]} alert-dismissible fade show position-fixed" 
                         style="top: 18px; right: 18px; z-index: 9999; min-width: 270px;">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `);

                $('body').append(notification);

                // Auto hide after 3 seconds
                setTimeout(function() {
                    notification.fadeOut();
                }, 3000);
            };
        });

        // Logout confirmation function
        function confirmLogout() {
            Swal.fire({
                title: 'Xác nhận đăng xuất',
                text: 'Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đăng xuất',
                cancelButtonText: 'Hủy',
                reverseButtons: true,
                customClass: {
                    confirmButton: 'btn btn-danger me-2',
                    cancelButton: 'btn btn-secondary'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading indicator
                    Swal.fire({
                        title: 'Đang đăng xuất...',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Submit the logout form
                    document.getElementById('logoutForm').submit();
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
